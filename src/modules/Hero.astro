---
import {Image} from 'astro:assets';
const {headline, title, subtitle, bgImage, logo} = Astro.props;
---
<section class="hero relative min-h-screen w-full overflow-hidden">
    <div class="w-full grid grid-cols-6 pt-16 px-8 mb-8 gap-x-8
                lg:mx-auto lg:max-w-screen-md lg:px-8 lg:grid-cols-12 lg:px-0
				xl:max-w-screen-lg xl:pt-0 xl:h-screen xl:mb-0
				2xl:max-w-screen-xl 2xl:mt-0 2xl:justify-center">
        <div class="text min-h-full h-full flex flex-col justify-center content-center
            col-start-1 col-span-6">
          {headline &&
                  <header class="block font-body font-normal text-base text-zinc-800 mb-0
                               md:mt-32 md:mb-0
                               lg:mt-32 lg:text-neutral-darkest
                               xl:mt-0">{headline}</header>
          }
            <h1 class="font-display text-3xl text-zinc-800 mt-8 mb-4 font-bold
						   sm:text-2xl
						   md:text-4xl md:pt-8 md:mb-8 md:mt-16
						   lg:text-neutral-darkest lg:mt-8
                           xl:text-5xl xl:mt-8
                           2xl:text-4xl 2xl:mt-8"
                set:html={title}/>
            <h2 class="font-body text-lg text-zinc-800
                            2xl:text-2xl
						   md:text-xl" set:html={subtitle}/>
            <slot name="social-proof"/>
            <slot name="ctas"/>
        </div>
        <div class="flex h-full items-center col-span-6">
            <Image
                src={bgImage}
                widths={[320, 640, 768, 1024, 1280, 1536, 1920, 2048, 2560]}
                format="webp"
                position="attention"
                class="image rounded-2xl aspect-auto w-full"
                alt="{ title } Hero Bild"
            />
        </div>
    </div>
</section>
