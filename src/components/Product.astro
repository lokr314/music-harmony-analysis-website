---

export interface Props {
	name: string;
    img_path: string;
    alt: string;
    description: string;
}

const { title, img_path, alt, description } = Astro.props as Props;
---

<div class="flex flex-col items-center p-6">
    <img src={img_path ? img_path : ""} alt={alt} class="w-auto h-32 rounded-lg">
    <h2 class="text-2xl font-medium text-amber-800">{title}</h2>
    <p class="text-amber-500 w-1/2">{description}</p>
    <button class="bg-amber-500 text-white py-2 px-4 rounded-lg hover:bg-amber-600" onclick="snipcart.addItem({id: {name}, name: {name}, price: 5.99, url: 'path/to/product/Rapshonig'})">Add to Cart</button>
</div>
  