---
export interface Props {
	number: string
    link: string 
    gray?: boolean
}

const { number, link, gray = false} = Astro.props as Props;
---
{!gray ?
    <a class="text-black float-left py-2 px-4 no-underline border border-solid border-neutral-400 mx-1 transition duration-300 hover:bg-neutral-400" href={link} >
        {number}
    </a>
    :
    <div class="text-neutral-200 float-left py-2 px-4 no-underline border border-solid border-neutral-400 mx-1">
        {number}
    </div>
}