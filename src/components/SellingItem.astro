---
export interface Props {
	name: string;
    price: number;
    id: string;
    description: string;
    image: string;
    alt: string;  
}

const { name, image, alt, description, price, id } = Astro.props as Props;
---

<div class="flex flex-col items-center p-6">
    <img src={image ? image : ""} alt={alt} class="w-auto h-32 rounded-lg">
    <h2 class="text-2xl font-medium text-amber-800">{name}</h2>
    <p class="w-1/2">{description}</p>
    <button class="snipcart-add-item bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-2 px-4 rounded-lg"
        data-item-name={name}
        data-item-price={price}
        data-item-id={id}
        data-item-url="https://f3e8-2003-f2-2703-96cc-fd04-6ed0-db57-e5a9.eu.ngrok.io/snipcart"
        data-item-description={description}
        data-item-image={image}>
        Add to cart
    </button>                  
</div>
  