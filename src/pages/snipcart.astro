---
import BaseLayout from '../layouts/BaseLayout.astro';
import SellingItem from '../components/SellingItem.astro';
---
<BaseLayout title="Test">
    <main style="padding: 2rem; display: flex; flex-direction: column; gap: 1rem;">
        <div class="text-amber-500 text-center">
            Your cart contains <span class="snipcart-items-count"></span> items with a total of <span class="snipcart-total-price"></span>.
        </div>
        <div class="text-center">

            <button class="snipcart-checkout">Click here to checkout</button>

            <SellingItem name = 'Blütenhonig'
                price={ 7.99 }
                id="bl-honig"
                description = 'Der Blütenhonig ist ein sehr aromatischer Honig, der von den Bienen aus den Blüten der verschiedenen Pflanzen gesammelt wird. Er ist sehr aromatisch und hat einen hohen Fruchtzuckergehalt. Er ist sehr beliebt und wird gerne zum Süßen von Tee und Kaffee verwendet.'
                image = '/images/honey_with_flowers.jpg'
                alt = 'Leckerer Blütenhonig in goldgelber Farbe'>                  
            </SellingItem>

            <SellingItem name = 'Lindenblütenhonig'
                price={ 7.99 }
                id="lbl-honig"
                description = 'Der Lindenblütenhonig ist ein sehr aromatischer Honig, der von den Bienen aus den Blüten der Linden gesammelt wird. Er ist sehr aromatisch und hat einen hohen Fruchtzuckergehalt. Er ist sehr beliebt und wird gerne zum Süßen von Tee und Kaffee verwendet.'
                image = '/images/we.jpg'
                alt = 'Leckerer Lindenblütenhonig in goldgelber Farbe'>
            </SellingItem>

            <SellingItem name = 'Acacia Honey'
                price={ 7.99 }
                id="ac-honig"
                description = 'Acacia Honey is known for its delicate, floral taste and light color. It is a popular choice for sweetening tea and coffee, and is often used as a spread on toast and biscuits.'
                image = '/images/acacia.jpg'
                alt = 'Delicious Acacia Honey'>
            </SellingItem>

            <SellingItem name = 'Wildflower Honey'
                price={ 7.99 }
                id="wf-honig"
                description = 'Wildflower Honey is a mixture of nectars collected by bees from various wildflowers. It has a unique, complex flavor and is ideal for use in baking or as a natural sweetener.'
                image = '/images/wildflower.jpg'
                alt = 'Flavorful Wildflower Honey'>
            </SellingItem>

            <SellingItem name = 'Heather Honey'
                price={ 7.99 }
                id="h-honig"
                description = 'Heather Honey is made from the nectar of heather flowers and has a strong, distinct flavor. It is often used in traditional Scottish cuisine and is a popular choice for marinades and glazes.'
                image = '/images/heather.jpg'
                alt = 'Unique Heather Honey'>
            </SellingItem>
        </div>
    </main>
</BaseLayout>